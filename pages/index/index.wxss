.title-top {
  text-align: center;
  font-size: 14px;
  background-color: white;
  margin-top: 5px;
  line-height: 50px;
}
.title-index{
  display: block;
  position: relative;   /*定位横线（当横线的父元素）*/
}
.title-index:before, .title-index:after {
  content: '';
  position: absolute;
  top: 52%;
  background: #4b4b4b;
  width: 9%;
  height: 2px;
}
.title-index:before{
  left: 30%;
}
.title-index:after {
  right: 30%;
}